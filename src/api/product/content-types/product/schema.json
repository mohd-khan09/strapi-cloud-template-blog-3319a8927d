{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Product pages for GreenCore products"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "default": "EcoCore Premium Door Panel"
    },
    "FeaturedImage": {
      "type": "media",
      "allowedTypes": ["images"]
    },
    "Slug": {
      "type": "uid",
      "targetField": "Name"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "HeroSection": {
      "type": "component",
      "repeatable": false,
      "component": "greencore.product-hero"
    },
    "ApplicationsSection": {
      "type": "component",
      "repeatable": false,
      "component": "greencore.applications-section"
    },
    "WhyHoneycombSection": {
      "type": "component",
      "repeatable": false,
      "component": "greencore.why-honeycomb-section"
    },
    "TechnicalSpecifications": {
      "type": "component",
      "repeatable": false,
      "component": "greencore.technical-specifications-section"
    },
    "KeyFeaturesSection": {
      "type": "component",
      "repeatable": false,
      "component": "greencore.key-features-section"
    },
    "RelatedProducts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    },
    "ReviewsSection": {
      "type": "component",
      "repeatable": false,
      "component": "greencore.reviews-section"
    },
    "LoadCapacityCTA": {
      "type": "component",
      "repeatable": false,
      "component": "greencore.load-capacity-cta"
    },
    "Categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    }
  }
}
