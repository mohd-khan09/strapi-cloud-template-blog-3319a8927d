{
  "collectionName": "components_greencore_review_cards",
  "info": {
    "displayName": "Review Card",
    "description": "Individual customer review"
  },
  "options": {},
  "attributes": {
    "Rating": {
      "type": "integer",
      "default": 5,
      "min": 1,
      "max": 5
    },
    "Content": {
      "type": "text",
      "default": "Great product! Highly recommended."
    },
    "CustomerName": {
      "type": "string",
      "default": "John Doe"
    },
    "CustomerTitle": {
      "type": "string",
      "default": "Homeowner"
    },
    "CustomerPhoto": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "Date": {
      "type": "string",
      "default": "2 months ago"
    }
  }
}
